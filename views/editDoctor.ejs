<!DOCTYPE html>
<html>
  <head>
    <title> </title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta
      name="keywords"
      content="Glance Design Dashboard Responsive web template, Bootstrap Web Templates, Flat Web Templates, Android Compatible web template, 
SmartPhone Compatible web template, free WebDesigns for Nokia, Samsung, LG, SonyEricsson, Motorola web design"
    />
    <script type="application/x-javascript">
      addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); }
    </script>

    <!-- Bootstrap Core CSS -->
    <link href="css/bootstrap.css" rel="stylesheet" type="text/css" />

    <!-- Custom CSS -->
    <link href="css/style.css" rel="stylesheet" type="text/css" />

    <!-- font-awesome icons CSS -->
    <link href="css/font-awesome.css" rel="stylesheet" />
    <!-- //font-awesome icons CSS -->

    <!-- side nav css file -->
    <link
      href="css/SidebarNav.min.css"
      media="all"
      rel="stylesheet"
      type="text/css"
    />
    <!-- side nav css file -->

    <!-- js-->
    <script src="js/jquery-1.11.1.min.js"></script>
    <script src="js/modernizr.custom.js"></script>

    <!--webfonts-->
    <link
      href="//fonts.googleapis.com/css?family=PT+Sans:400,400i,700,700i&amp;subset=cyrillic,cyrillic-ext,latin-ext"
      rel="stylesheet"
    />
    <!--//webfonts-->

    <!-- Metis Menu -->
    <script src="js/metisMenu.min.js"></script>
    <script src="js/custom.js"></script>
    <link href="css/custom.css" rel="stylesheet" />
    <!--//Metis Menu -->
  </head>
  <body class="cbp-spmenu-push">
    <div class="main-content">
      <div
        class="cbp-spmenu cbp-spmenu-vertical cbp-spmenu-left"
        id="cbp-spmenu-s1"
      >
        <!--left-fixed -navigation-->
        <%- include('sidebar') -%>
      </div>
      <!--left-fixed -navigation-->

      <!-- header-starts -->
      <%- include('headerMenu') -%>
      <!-- //header-ends -->
      <!-- main content start-->
      <div id="page-wrapper">
        <div class="main-page">
          <div class="row">
            <h1 class="mb-4">Edit Doctor</h1>
            <a href="javascript:history.go(-1)" class="btn btn-secondary mt-3">
  <i class="fa fa-arrow-left"></i> Back
</a>
            <div class="form-three widget-shadow">
              <form action="/add-doctor" method="post" class="form-horizontal">
                <div class="form-group">
                  <label for="focusedinput" class="col-sm-2 control-label"
                    >Name:</label
                  >
                  <div class="col-sm-8">
                    <input
                      type="text"
                      class="form-control1"
                      id="name"
                      name="name"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label for="type_id" class="col-sm-2 control-label"
                    >Doctor Type:</label
                  >
                  <div class="col-sm-8">
                    <select
                      class="form-control1"
                      id="type_id"
                      name="type_id"
                      required
                    >
                      <% doctorTypes.forEach(doctorType => { %>
                      <option value="<%= doctorType.type_id %>">
                        <%= doctorType.doctor_type_name %>
                      </option>
                      <% }) %>
                    </select>
                  </div>
                </div>
                <div class="form-group">
                  <label for="mobile_number" class="col-sm-2 control-label"
                    >Mobile Number:</label
                  >
                  <div class="col-sm-8">
                    <input
                      type="text"
                      class="form-control1"
                      id="mobile_number"
                      name="mobile_number"
                      required
                    />
                  </div>
                </div>

                <!-- Appointment Dates -->
                <div class="form-group">
                  <label class="col-sm-2 control-label"
                    >Appointment Dates:</label
                  >
                  <div id="appointment_dates_container">
                    <div class="row">
                    <div class="col-sm-8">
                      <input
                        type="date"
                        class="form-control1"
                        name="appointment_dates[]"
                        required
                      />
                    </div>
                    </div>
                  </div>
                  <button
                    type="button"
                    class="btn btn-success mt-2"
                    onclick="addAppointmentDate()"
                  >
                    Add Another Date
                  </button>
                </div>

                <!-- Additional Details -->
                <div class="form-group">
                  <label for="details1" class="col-sm-2 control-label"
                    >Details 1:</label
                  >
                  <div class="col-sm-8">
                    <input
                      type="text"
                      class="form-control1"
                      id="details1"
                      name="details1"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label for="details1" class="col-sm-2 control-label"
                    >Details 2:</label
                  >
                  <div class="col-sm-8">
                    <input
                      type="text"
                      class="form-control1"
                      id="details2"
                      name="details2"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label for="details3" class="col-sm-2 control-label"
                    >Details 3:</label
                  >
                  <div class="col-sm-8">
                    <input
                      type="text"
                      class="form-control1"
                      id="details3"
                      name="details3"
                      required
                    />
                  </div>
                </div>

                <!-- Appointment Time and Fees -->
                <div class="form-group">
                  <label for="appointment_time" class="col-sm-2 control-label"
                    >Appointment Time:</label
                  >
                  <div class="col-sm-4">
                    <input
                      type="time"
                      class="form-control1"
                      id="appointment_time"
                      name="appointment_time"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label for="appointment_fees" class="col-sm-2 control-label"
                    >Appointment Fees:</label
                  >
                  <div class="col-sm-4">
                    <input
                      type="number"
                      step="0.01"
                      class="form-control1"
                      id="appointment_fees"
                      name="appointment_fees"
                      required
                    />
                  </div>
                </div>
                <div class="form-group">
                  <label for="appointment_venue" class="col-sm-2 control-label"
                    >Appointment Venue:</label
                  >
                  <div class="col-sm-8">
                    <input
                      type="text"
                      class="form-control1"
                      id="appointment_venue"
                      name="appointment_venue"
                      required
                    />
                  </div>
                </div>
                </br>
                <button type="submit" class="btn btn-primary">Add</button>
              </form>
           
            </div>
          </div>
        </div>
      </div>
      <!--footer-->
      <%- include('footerMenu') -%>
      <!--//footer-->
    </div>

    <!-- side nav js -->
    <script src="/js/SidebarNav.min.js" type="text/javascript"></script>
    <script>
      function addAppointmentDate() {
  var container = $("#appointment_dates_container");
  var newDateInput = $("<div class='row'><div class='col-sm-8'><input type='date' class='form-control1 mt-2' name='appointment_dates[]' required/></div></div>");
  container.append(newDateInput);
      }
      $(".sidebar-menu").SidebarNav();
    </script>
    <!-- //side nav js -->

    <!-- Classie --><!-- for toggle left push menu script -->
    <script src="/js/classie.js"></script>
    <script>
      var menuLeft = document.getElementById("cbp-spmenu-s1"),
        showLeftPush = document.getElementById("showLeftPush"),
        body = document.body;

      showLeftPush.onclick = function () {
        classie.toggle(this, "active");
        classie.toggle(body, "cbp-spmenu-push-toright");
        classie.toggle(menuLeft, "cbp-spmenu-open");
        disableOther("showLeftPush");
      };

      function disableOther(button) {
        if (button !== "showLeftPush") {
          classie.toggle(showLeftPush, "disabled");
        }
      }
    </script>
    <!-- //Classie --><!-- //for toggle left push menu script -->

    <!--scrolling js-->
    <script src="/js/jquery.nicescroll.js"></script>
    <script src="/js/scripts.js"></script>
    <!--//scrolling js-->

    <!-- Bootstrap Core JavaScript -->
    <script src="/js/bootstrap.js"></script>
  </body>
</html>
